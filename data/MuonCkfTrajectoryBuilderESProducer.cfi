es_module MuonCkfTrajectoryBuilder = MuonCkfTrajectoryBuilderESProducer
{
  string ComponentName = "muonCkfTrajectoryBuilder"
  string MeasurementTrackerName = ""
  string trajectoryFilterName = "muonCkfTrajectoryFilter"

  int32  maxCand              = 5
  double lostHitPenalty       = 30.
  bool   intermediateCleaning = false
  bool   alwaysUseInvalidHits = true

  string TTRHBuilder          = "WithTrackAngle"
  string propagatorAlong      = "PropagatorWithMaterial"
  string propagatorOpposite   = "PropagatorWithMaterialOpposite"
  string updator              = "KFUpdator"
  string estimator            = "Chi2"

	#would skip the first layer to search for measurement if bare TrajectorySeed
	bool useSeedLayer = false
	#would rescale the error to find measurements is failing 
	#1.0 would skip this step completely
	double rescaleErrorIfFail = 1.0
	#propagator used only if useSeedLayer=true
	string propagatorProximity = "SteppingHelixPropagatorAny"

}
